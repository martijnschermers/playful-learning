@model ICollection<GameNight> 

@{
    ViewBag.Title = "Alle Spelavonden";
}

<body>
<div>
    <h1 class="text-center">Alle Spelavonden</h1>

    <div class="row row-cols-1 row-cols-md-3 g-2">
        @foreach (var gameNight in Model) {
            <partial model="gameNight" name="_GameNight" />
        }
    </div>

    <div class="d-flex flex-column gap-2">
        <a asp-action="Organize">Organiseer een spelavond</a>
        <a asp-action="Organized">Georganiseerde spelavonden</a>
        <a asp-action="Participating">Spelavonden waaraan ik deelneem</a>
    </div>
</div>
</body>