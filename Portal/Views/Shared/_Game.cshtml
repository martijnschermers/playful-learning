@model Game

<div class="col-sm-6">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <h6 class="card-subtitle mb-2">Genre: @Model.Genre</h6>
            @if (Model.IsOnlyForAdults) {
                <p class="card-text">18+</p>
            }
        </div>
    </div>
</div>