@model GameNight

@{
    var action = ViewContext.RouteData.Values["action"];
}

<div class="col">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Organizer.Name</h5>
            <h6 class="card-subtitle mb-2">@Model.DateTime</h6>
            <p class="card-text">Adres: @Model.Address</p>
            <p class="card-text">Maximaal aantal deelnemers: @Model.MaxPlayers</p>
            <p class="card-text">Potluck: @Model.IsPotluck</p>
            <p class="card-text">Voor volwassenen: @Model.IsOnlyForAdults</p>

            @if (Model.Players.Count == 0 && action!.Equals("Organized")) {
                <a asp-action="Update" asp-route-id="@Model.Id" asp-controller="GameNight" class="card-link">Aanpassen</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" asp-controller="GameNight" class="card-link">Verwijderen</a>
            }

            <a asp-action="Details" asp-route-id="@Model.Id" asp-controller="GameNight" class="card-link">Details</a>
        </div>
    </div>
</div>