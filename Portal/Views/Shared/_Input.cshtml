@model object

<div class="form-floating mb-3">
    <input class="form-control @(!ViewData.ModelState.IsValid && ViewData.ModelState[nameof(Model)]!.Errors.Count > 0 ? "is-invalid" : string.Empty)" asp-for="@nameof(Model)" placeholder="@nameof(Model)"/>
    <label asp-for="@nameof(Model)"></label>

    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[nameof(Model)]!.Errors.Count > 0) {
        <div class="invalid-feedback">
            @ViewData.ModelState[nameof(Model)]!.Errors[0].ErrorMessage
        </div>
    }
</div>