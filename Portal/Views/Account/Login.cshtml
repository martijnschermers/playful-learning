@model LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post">
    <input asp-for="ReturnUrl" />
    
    <div class="form-group">
        <label asp-for="Email">Emailadres: </label>
        <input class="form-control" asp-for="Email"/>
    </div>

    <div class="form-group">
        <label asp-for="Password">Wachtwoord: </label>
        <input class="form-control" asp-for="Password"/>
    </div>

    <div class="d-flex flex-column mt-2 justify-center">
        <button class="btn btn-primary col-4" type="submit">Log in</button>
        <a class="link-primary col-3 my-2" asp-action="Register">Nog geen account? Registreer!</a>
    </div>

    <div class="text-danger" asp-validation-summary="All"></div>
</form>