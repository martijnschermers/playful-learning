@model RegisterViewModel

@{
    ViewBag.Title = "Registreer";
}

<h2>Registreer</h2>

<form asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="Username">Gebruikersnaam: </label>
            <input asp-for="Username"/>
        </div>
    
    <div class="form-group">
        <label asp-for="Email">Emailadres: </label>
        <input asp-for="Email"/>
    </div>

    <div class="form-group">
        <label asp-for="BirthDate">Geboortedatum: </label>
        <input asp-for="BirthDate"/>
    </div>
    
    <div class="form-group">
        <label asp-for="Password">Wachtwoord: </label>
        <input asp-for="Password"/>
    </div>
    
    <div class="form-group">
        <label asp-for="RepeatPassword">Herhaal wachtwoord: </label>
        <input asp-for="RepeatPassword"/>
    </div>

    <button type="submit">Registreer</button>

    <a asp-action="Login">Al een account? Login!</a>

    <div class="text-danger" asp-validation-summary="All"></div>
</form>